<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top mb-3 pb-2">
  <div class="container-fluid container">
    <div class='d-flex justify-content-start align-items-center'>
      <%= link_to root_path, class: "navbar-brand rainbow-btn home-button-circle" do %>
        <i class="fa-solid fa-info"></i><i class="fa-solid fa-f"></i>
      <% end %>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="d-flex">
        <%= form_tag search_imaginary_friends_path, method: :get do %>
          <%= text_field_tag :query, nil, placeholder: "Search all friends" %>
          <%= button_tag(type: 'submit', class: 'search-btn-small') do %>
            <i class="fas fa-search"></i>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <%# <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link" %>
          <%# </li> %>
          <%# <li class="nav-item">
            <%= link_to "Messages", "#", class: "nav-link" %>
          <%# </li> %>
          <li class="nav-item dropdown rainbow-btn menu-button-rounded">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <i class="fa-regular fa-user avatar dropdown-toggle pt-2" style="font-size: 20px" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
            <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My Bookings", my_bookings_index_booking_path(current_user), class: "dropdown-item" %>
              <hr>
              <%= link_to "Create a new iFriend", new_imaginary_friend_path, class: "dropdown-item" %>
              <% if current_user.imaginary_friends.count > 0 %>
                <%= link_to "My iFriends", my_friends_index_imaginary_friend_path(current_user), class: "dropdown-item" %>
                <%= link_to "Bookings of my iFriends", bookings_of_ifriends_index_booking_path(current_user), class: "dropdown-item" %>
              <% end %>
              <hr>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item rainbow-btn">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
