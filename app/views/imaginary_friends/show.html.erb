<div class="container">
  <div class="friend-container">
    <%# Description %>
    <div class="mb-4">
      <h1>Imaginary Friend: <%=@imaginary_friend.name%></h1>
      <div class="white-background-text">
        <% if @imaginary_friend.special_abilities %>
          <div class='d-flex'>
            <% @imaginary_friend.special_abilities.split(',').each do |ability| %>
              <p class='special-ability-tag'>
                <%= "##{ability}" %>
              </p>
            <% end %>
          </div>
        <%end%>
        <p><%=@imaginary_friend.description%></p>
      </div>
      <%= cl_image_tag @imaginary_friend.photo.key, class:"card-friend" if @imaginary_friend.photo.attached? %>
    </div>

    <%# Booking box or actions box %>
    <div class='white-background-text'>
      <h4>â‚¬<%=@imaginary_friend.price%>/day</h4>
      <% if current_user && current_user == @imaginary_friend.user%>
        <%= link_to 'Edit this friend', edit_imaginary_friend_path, class:"btn btn-pink-edit mb-4"%>
        <%= link_to "Remove this imaginary friend",
          imaginary_friend_path(@imaginary_friend),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-delete mb-4" %>
      <% else %>
        <%= render 'calendar' %>
      <% end %>
    </div>
  </div>

  <div>
    <%= render 'new_review', imaginary_friend: @imaginary_friend %>
  </div>
</div>
